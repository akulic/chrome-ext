{
  "name": "CA web plugin",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Antonio KuliÄ‡",
  "description": "Web shop plugin",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://web1.carparts-cat.com/*"
      ],
      "js": [
        "content.js",
        "src/jquery-3.5.0.slim.min.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "src/copy_16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "src/copy_16.png",
    "48": "src/copy_48.png",
    "128": "src/copy.png"
  }
}